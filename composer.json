{
    "name": "stop-covid/stop-covid",
    "type": "project",
    "description": "Stop-Covid API",
    "keywords": [
        "covid",
        "api"
    ],
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "laravel/framework": "^7.0",
        "laravel/horizon": "^4.3",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^2.0",
        "rollbar/rollbar-laravel": "^6.0",
        "soyhuce/laravel-8-factories": "^0.1.6",
        "soyhuce/next-ide-helper": "^0.1.1",
        "soyhuce/service-provider-registrar": "^0.3.0",
        "spatie/data-transfer-object": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.3",
        "facade/ignition": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^4.1",
        "nunomaduro/larastan": "^0.5.2",
        "nunomaduro/phpinsights": "^1.14",
        "phpunit/phpunit": "^9.0",
        "soyhuce/dev-tools": "^2.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "barryvdh/laravel-debugbar",
                "nunomaduro/phpinsights"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/App/",
            "Domain\\": "app/Domain/",
            "Support\\": "app/Support/",
            "Database\\Factories\\": "database/factories"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "migrate": [
            "@php artisan migrate"
        ],
        "migrate:fresh": [
            "@php artisan migrate:fresh"
        ],
        "migrate:refresh": [
            "@php artisan migrate:refresh"
        ],
        "db:seed": [
            "@php artisan db:seed"
        ],
        "mf": [
            "composer migrate:fresh"
        ],
        "mfs": [
            "composer migrate:fresh",
            "composer db:seed"
        ],
        "cs": [
            "./vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "./vendor/bin/phpunit --config=phpunit.xml"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse"
        ],
        "all": [
            "@cs",
            "@test"
        ]
    }
}
